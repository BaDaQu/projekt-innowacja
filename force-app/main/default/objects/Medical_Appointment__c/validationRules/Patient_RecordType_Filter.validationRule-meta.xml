<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Patient_RecordType_Filter</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT(ISBLANK(Patient__c)),
    Patient__r.RecordType.Name &lt;&gt; &quot;Patient&quot; 
)</errorConditionFormula>
    <errorDisplayField>Patient__c</errorDisplayField>
    <errorMessage>Wybierz pacjenta z record type &apos;Patient&apos;</errorMessage>
</ValidationRule>
